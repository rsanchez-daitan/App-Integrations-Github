<messageML>
    <div class="entity" data-entity-id="githubRelease">
        <card class="barStyle" iconSrc="${entity['githubRelease'].iconURL}">
            <header>
                <a href="${entity['githubRelease'].release.url}">
                    <#if (entity['githubRelease'].release.name)??>
                        Release ${entity['githubRelease'].release.name}
                    <#else>
                        Release ${entity['githubRelease'].release.tagName}
                    </#if>
                </a>

                <span class="tempo-text-color--green"><b> created </b></span>
                <span class="tempo-text-color--normal">by </span>
                <span class="tempo-text-color--normal"><b>${entity['githubRelease'].release.author.name} </b></span>
                <span class="tempo-text-color--normal">in </span>
                <a href="${entity['githubRelease'].repository.url}">
                    ${entity['githubRelease'].repository.fullName}
                </a>
            </header>
        </card>
    </div>
</messageML>
